<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F8F9FA">

    <!-- Başlık -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Akıl Pusulası"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#1E40AF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/orbitron_bold"/>

    <!-- İçerik Alanı -->
    <LinearLayout
        android:id="@+id/contentArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_above="@id/bottomNavContainer"
        android:orientation="vertical"
        android:layout_marginBottom="24dp">

        <!-- İstatistik Container -->
        <androidx.cardview.widget.CardView
            android:id="@+id/statisticsCard"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <View
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/circle_blue_gradient"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="İstatistik Alanı"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:fontFamily="@font/orbitron_bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verileriniz burada görünecek"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/orbitron_bold"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- AI Yorum Container -->
        <androidx.cardview.widget.CardView
            android:id="@+id/aiCommentCard"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <View
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/circle_purple_gradient"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI Yorum Alanı"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:fontFamily="@font/orbitron_bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI analizleri burada görünecek"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/orbitron_bold"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Alt Navigasyon Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottomNavContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="28dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Günlük Butonu -->
            <LinearLayout
                android:id="@+id/btnJournal"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:background="@drawable/button_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="2dp"
                    android:src="@drawable/ic_journal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GÜNLÜK"
                    android:textColor="#333333"
                android:textSize="11sp"
                android:textStyle="bold"
                android:fontFamily="@font/orbitron_bold" />

            </LinearLayout>

            <!-- Ana Sayfa Butonu (Ortada ve Büyük) -->
            <LinearLayout
                android:id="@+id/btnHome"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1.3"
                android:background="@drawable/button_glow"
                android:clickable="true"
                android:elevation="6dp"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/ic_home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ANA SAYFA"
                    android:textColor="#333333"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/orbitron_bold" />

            </LinearLayout>

            <!-- Oyun Butonu -->
            <LinearLayout
                android:id="@+id/btnGame"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:background="@drawable/button_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginBottom="2dp"
                    android:src="@drawable/ic_game" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OYUN"
                    android:textColor="#333333"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/orbitron_bold" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
